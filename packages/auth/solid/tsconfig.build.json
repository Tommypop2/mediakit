{
  "compilerOptions": {
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "esnext",
    "moduleResolution": "Node",
    "strict": false,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "module": "esnext",
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["@solidjs/start/env", "node", "./locals"],
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist", "./locals.d.ts"]
}
