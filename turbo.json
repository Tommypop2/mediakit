{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"]
    },
    "dev": {
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "ts:check": {
      "cache": false
    },
    "lint": {
      "cache": false
    },
    "test": {
      "cache": true
    },
    "test:coverage": {
      "cache": false,
      "outputs": []
    }
  }
}
